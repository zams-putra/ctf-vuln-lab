<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vuln XSS</title>
    <style>
      :root {
        --gelap: #2b2e4a;
        --cerah: #f5f7f8;
        --primary: #f4ce14;
      }
      body {
        background-color: var(--gelap);
        color: var(--cerah);
        height: 100vh;
        font-family: Georgia, "Times New Roman", Times, serif;
      }
      form,
      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      form {
        border: 0.1rem solid var(--primary);
        padding: 1rem 3rem;
        border-radius: 0.2rem;
        gap: 1rem;
      }
      button {
        background-color: var(--cerah);
        color: var(--gelap);
        padding: 0.2rem 1.2rem;
        transition: all ease 0.3s;
        border-radius: 0.2rem;
      }
      button:hover {
        background-color: var(--primary);
      }

      a {
        color: var(--primary);
      }
    </style>
  </head>
  <body>
    <h1>Register Page</h1>

    <form action="/xss/register" method="post">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" />
      <label for="password">Password</label>
      <input type="password" name="password" id="password" />
      <label for="show_passwd">
        <input type="checkbox" id="show_passwd" />
        <small>show password</small>
      </label>
      <button type="submit">Register</button>
    </form>
  </body>

  <script>
    const passwd = document.querySelector("#password");
    const showPasswd = document.querySelector("#show_passwd");

    showPasswd.addEventListener("input", (e) => {
      if (e.target.checked) {
        passwd.setAttribute("type", "text");
      } else {
        passwd.setAttribute("type", "password");
      }
    });
  </script>
</html>
